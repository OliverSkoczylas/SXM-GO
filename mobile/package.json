{
  "name": "SxmGo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "start:reset": "react-native start --reset-cache",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "cd android && ./gradlew clean && cd .. && rm -rf node_modules/.cache",
    "clean:ios": "cd ios && rm -rf Pods && pod install && cd ..",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "@supabase/supabase-js": "^2.39.0",
    "@react-native-google-signin/google-signin": "^11.0.0",
    "@invertase/react-native-apple-authentication": "^2.3.0",
    "react": "18.2.0",
    "react-native": "0.73.2",
    "react-native-config": "^1.5.1",
    "react-native-fbsdk-next": "^13.0.0",
    "react-native-image-picker": "^7.1.0",
    "react-native-keychain": "^8.2.0",
    "react-native-permissions": "^4.1.4",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-screens": "^3.29.0",
    "react-native-url-polyfill": "^2.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/runtime": "^7.23.7",
    "@react-native/babel-preset": "0.73.19",
    "@react-native/eslint-config": "0.73.2",
    "@react-native/metro-config": "0.73.3",
    "@react-native/typescript-config": "0.73.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.3",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.47",
    "@types/react-test-renderer": "^18.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "patch-package": "^8.0.0",
    "prettier": "^3.2.2",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "moduleNameMapper": {
      "^@auth/(.*)$": "<rootDir>/src/auth/$1",
      "^@shared/(.*)$": "<rootDir>/src/shared/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native|@react-navigation|@supabase|react-native-keychain|react-native-permissions|react-native-image-picker|react-native-screens|react-native-safe-area-context)/)"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/android/",
      "/ios/"
    ]
  }
}
